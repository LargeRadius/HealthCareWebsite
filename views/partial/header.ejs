<!DOCTYPE html>
<html>
  <head>
    <!-- Make site responsive on mobile/tablet -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HealthCare</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css"></link>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"></script>
  </head>
  
    <nav class="navbar navbar-default">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">HealthCare</a>
        </div>
    
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
              <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/posts">Home</a></li>
            </ul>
          <ul class="nav navbar-nav navbar-right">
          <% if (!currentUser) { %>
              <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
                <a href="/login">
                  Login
                  <i class="fa fa-user" aria-hidden="true"></i>
                </a>
              </li>
              <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
                <a href="/register">
                  Sign Up
                  <i class="fa fa-user-plus" aria-hidden="true"></i>
                </a>
              </li>
          <% } else { %>
              
              <% if (currentUser.isAdmin) {%>
                <li><a href="#">Administrator: <%= currentUser.username%></a></li>
              <% } else {%>
                <li><a id="header-username" href="/user/<%= currentUser._id%>">Login As: <%= currentUser.username%></a></li>
              <% }%>
              <li><a href="/logout">Logout</a></li>
          <% } %>
            
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    
    <div class="container">
      <% if (success && success.length > 0) { %>
        <div class="alert alert-success" role="alert"><%= success%></div>
      <% } %>
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert"><%= error%></div>
      <% } %>
    </div>
    <div class="container">